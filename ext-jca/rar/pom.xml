              <phase>prepare-package</phase>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <artifactId>maven-rar-plugin</artifactId>
          <version>2.4</version>
          <executions>
            <execution>
              <id>test</id>
              <goals>
                <goal>rar</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
